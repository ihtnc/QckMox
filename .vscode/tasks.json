{
    "version": "2.0.0",
    "tasks": [
        /// QckMox.Demo.Simple
        {
            "label": "QckMox.Demo.Simple: copy-mocks",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "${workspaceFolder}\\demo\\01-simple\\.qckmox",
                "${workspaceFolder}\\demo\\01-simple\\bin\\Debug\\netcoreapp5.0\\.qckmox",
                "/Y",
                "/I",
                "/E"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "QckMox.Demo.Simple: build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/demo/01-simple/QckMox.Demo.Simple.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["QckMox.Demo.Simple: copy-mocks"],
        },


        // QckMox.Demo.Standalone
        {
            "label": "QckMox.Demo.Standalone: copy-mocks",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "${workspaceFolder}\\demo\\02-standalone\\.qckmox",
                "${workspaceFolder}\\demo\\02-standalone\\bin\\Debug\\netcoreapp5.0\\.qckmox",
                "/Y",
                "/I",
                "/E"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "QckMox.Demo.Standalone: build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/demo/02-standalone/QckMox.Demo.Standalone.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["QckMox.Demo.Standalone: copy-mocks"],
        }
    ]
}