   "version": "0.2.0",
   "configurations": [
        // QckMox.Demo.Simple
        {
            "name": ".NET Core Launch (QckMox.Demo.Simple)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "QckMox.Demo.Simple: build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "QckMox.Demo.Simple.dll",
            "args": [],
            "cwd": "${workspaceFolder}/demo/01-simple/bin/Debug/netcoreapp5.0/",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "uriFormat": "%s/swagger",
                "pattern": "^\\s*Now listening on:\\s+(http:\\/\\/.+[0-9]+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },


